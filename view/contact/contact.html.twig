<div class="container-fluid bg-dark text-white"
     id="contact"
>
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 col-md-6 pt-5">
                <h1 class="contact__header">{{ _(_self, 'heading') }}</h1>
                <p>{{ _(_self, 'text') }}</p>
            </div>
            <div class="col-12 col-md-6 pt-5">
                <form id="contact"
                      method="post"
                >
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label for="contact__name">Your name</label>
                                <input id="contact__name"
                                       class="form-control"
                                       required
                                >
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label for="contact__email">{{ _(_self, 'form.email') }}</label>
                                <input id="contact__email"
                                       class="form-control"
                                       required
                                >
                                <small class="form-text text-muted">{{ _(_self, 'form.email.desc') }}</small>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="contact__message">{{ _(_self, 'form.message') }}</label>
                                <textarea id="contact__message"
                                          class="form-control contact__message"
                                          rows="3"
                                          required
                                >
                                </textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-flex justify-content-start align-items-center">
                            <button id="contact__submit"
                                    type="submit"
                                    class="btn btn-iwgb contact__submit g-recaptcha"
                                    data-sitekey="{{ _recaptcha }}"
                                    data-callback="onSubmit"
                            >
                                <span>Send</span>
                            </button>
                            <span class="mx-2">{{ _(_self, 'to') }}</span>
                            <label for="target" class="sr-only">{{ _(_self, 'department') }}</label>
                            <select id="target"
                                    name="target"
                                    class="custom-select text-dark w-auto"
                            >
                                <option value="office">{{ _(_self, 'enquiries') }}</option>
                                <option value="membership">{{ _(_self, 'memberships') }}</option>
                                <option value="membership">{{ _(_self, 'dataProtection') }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 my-2">
                            <small class="text-muted">
                                <span>{{ _(_self, 'recaptcha.1') }} </span>
                                <a href="https://policies.google.com/privacy"
                                   target="blank"
                                   referrerpolicy="no-referrer"
                                   class="link-span-only text-white"
                                >
                                    <span>{{ _(_self, 'recaptcha.2') }}</span>
                                    <i class="fas fa-external-link-alt fa-sm"></i>
                                </a>
                                <span> {{ _(_self, 'recaptcha.3') }}</span>
                                <a href="https://policies.google.com/terms"
                                   target="blank"
                                   referrerpolicy="no-referrer"
                                   class="link-span-only text-white"
                                >
                                    <span>{{ _(_self, 'recaptcha.4') }}</span>
                                    <i class="fas fa-external-link-alt fa-sm"></i>
                                </a>
                                <span>{{ _(_self, 'recaptcha.5') }}.</span>
                            </small>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        {% include 'contact-office/contact-office.html.twig' with {
            office: 'London',
        } only %}
        {% include 'contact-office/contact-office.html.twig' with {
            office: 'Glasgow',
        } only %}
    </div>
</div>
<script>
    function onSubmit(token) {
        document.getElementById("contact").submit();
    }
</script>