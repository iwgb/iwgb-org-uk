{% extends 'root.html.twig' %}

{% block body %}
    <div class="container mt-3">
        {% include 'story/story-grid.html.twig' with {
            stories: stories,
            title: _(_self, tag),
            showMobileHeader: true,
            showMobileImages: true,
            showAuthors: showAuthors,
        } only %}
        <div class="row">
            <div class="col-12 my-3 d-flex align-items-center flex-column">
                {% if showEnd %}
                    <i class="far fa-newspaper fa-3x text-secondary mb-3"></i>
                    <h3>{{ _(_self, 'endCtaTitle') }}</h3>
                    <p>{{ _(_self, 'endCtaText') }}</p>
                    <div>
                        <a href="/join"
                           class="btn btn-iwgb"
                        >
                            <span class="mr-1">{{ _(_self, 'endCtaButton') }}</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                {% endif %}
            </div>

        </div>
        <div class="row">
            <div class="col-12 my-3 d-flex justify-content-between">
                <div>
                    {% if page > 1 %}
                        <a href="/{{ tag }}/{{ page - 1 }}" class="btn btn-iwgb">
                            <i class="fas fa-arrow-left"></i>
                            <span class="ml-1">{{ _(_self, 'newer') }}</span>
                        </a>
                    {% endif %}
                </div>
                <div>
                    {% if showNext %}
                        <a href="/{{ tag }}/{{ page + 1 }}" class="btn btn-iwgb">
                            <span class="mr-1">{{ _(_self, 'older') }}</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    {% endif %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
