{% for subcategory in data %}
    <div class="col-12 col-md">
        <h3>{{ _(_self, subcategory.tag.slug) }}</h3>
        <div class="nav__menu__items">
            {% for pageGroup in subcategory.pages %}
                {% set page =  pageGroup.getIntl() ?? pageGroup.getFallback() %}
                <a href="{{ _a('/page/' ~ pageGroup.getFallback().slug) }}"
                   class="d-block my-3"
                >
                    <span>{{ page.title }}</span>
                </a>
            {% endfor %}
        </div>
    </div>
{% endfor %}